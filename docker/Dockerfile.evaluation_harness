ARG BASE_IMAGE=registry.cn-beijing.aliyuncs.com/wanzhen/lmdpeloy
ARG VERSION=0.4.2-arch_808990
ARG BACKEND=lmdeploy
FROM ${BASE_IMAGE}:${VERSION}

WORKDIR /workspace
COPY ./llm-evaluation-harness llm-evaluation-harness

RUN cd /workspace/llm-evaluation-harness && pip3 install -e .
RUN python3 -m pip install fire && python3 -m pip uninstall transformer_engine

ENV PYTHONPATH=/workspace/llm-evaluation-harness:$PYTHONPATH
ENV SERVICE_PORT=8005
ENV BACKEND=${BACKEND}
